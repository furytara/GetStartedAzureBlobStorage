@model CRUDBlogStorage.Models.ImageUploadViewModel
@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload</h2>

@using (Html.BeginForm("Upload", "BlobStorage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <fieldset>

        <div class="form-group">
            @Html.LabelFor(model => model.FileName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FileName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FileName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FileAttachment, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FileAttachment, new { type = "file", @class = "input-file" })
                @Html.ValidationMessageFor(model => model.FileAttachment, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <input type="submit" value="Upload" class="btn btn-success" />
            </div>            
        </div>
    </fieldset>
}